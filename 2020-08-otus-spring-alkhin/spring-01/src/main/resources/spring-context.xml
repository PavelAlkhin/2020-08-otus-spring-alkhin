<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="question" class="ru.otus.spring.domain.Question"/>

    <bean id="questions" class="ru.otus.spring.dao.QuestionsDaoSimple">
        <!--        <constructor-arg name="questions" ref="question"/>-->
    </bean>

    <bean id="questionsService" class="ru.otus.spring.service.QuestionsServiceImpl">
        <constructor-arg name="questions" ref="questions"/>
        <property name="questionsFile" value="questions.csv"/>
    </bean>

</beans>
